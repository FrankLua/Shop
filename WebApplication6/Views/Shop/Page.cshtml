        <section class="feedback">
            <div class="feedback_div">
                <h2>Отзывы наших клиентов</h2>
            </div>
            <div class="faq_item">
                <input type="checkbox" class="faq_inpute" name="faq" id="faq_1">
                <label for="faq_1" class="faq_title"> Показать отзывы?</label>
                <div class="feedback_wrap">
                
                    @foreach (var feedback in Model.Productcomment)
                        {

                        <div class="row">
                            <div class="img_div">
                                <img src="@feedback.Usersrc" alt="">
                            </div>
                            <div class="info">
                                <h3>@feedback.FirstName @feedback.SecondName</h3>
                                <p>
                                    @feedback.Comments
                                </p>
                                <p style="font-size: 20px;">@feedback.Data</p>
                                @if (feedback.Review == 1)
                                {
                                    <p style ="color: green;" class="estimation">Оценка: рекомендую</p>
                                }
                                else
                                {
                                    <p style ="color: red;"class="estimation">Оценка: не рекомендую</p>
                                }
                            </div>
                            <div class="feedback_img">
                                @if (feedback.Review == 0)
                                {
                                    <img src="~/Images/WebPages/Page/free-icon-dislike-9145083.png" alt="">
                                }
                                else
                                {
                                    <img src="~/Images/WebPages/Page/free-icon-like-9145118.png" alt="">
                                }
                                
                            </div>

                        </div>

                    }
                    @if (ViewBag.Aunteficated != false)
                    {
                        
                        
                            <div class="inpute_div">
                            <form asp-action="PageComent" asp-controller="Shop" method="post">

                                    <div class="inpute_text_div">
                                        <input name="UserId" style="visibility: hidden;" type="text" value="@ViewBag.user.Id">
                                        <input name="SecondName" style="visibility: hidden;" type="text" value="@ViewBag.user.UserName">
                                        <input name="FirstName" style="visibility: hidden;" type="text" value="@ViewBag.user.SecondName">
                                        <input name="ProductName" style="visibility: hidden;" type="text" value="@Model.Name">
                                        <input name="Usersrc" style="visibility: hidden;" type="text" value="@ViewBag.user.SrcImg">
                                        <input name="ProductId" style="visibility: hidden;" type="text" value="@Model.Id">
                                        <h3>Оставте свой отзыв</h3>
                                        <textarea name="Comments" class="textarea" placeholder="Ваш отзыв">

                                        </textarea>
                                    </div>
                                    <div class="control_board">
                                        <label>
                                            <input class="radio" type="radio" name="Review" value="0">
                                            <span class="fake2"></span>
                                            Я не рекомендую
                                        </label>

                                        <button>
                                            Оставить отзыв

                                        </button>

                                        <label>
                                            Я рекомендую
                                            <input class="radio" type="radio" name="Review" value="1">
                                            <span class="fake"></span>

                                        </label>

                                    </div>
                                </form>
                            </div>

                        

                    }
                    else
                    {
                        <h3>Вы не можете оставить отзыв, авторизуйтесь!</h3>
                    }

                

                

                    
                   
                    
                </div>
            </div>



        </section>

        <section class="buy">
            <div class="buy_row">
                <div class="buy_title">
                    <h2 style="font-size: 42px;">Заказать фотосъемку</h2>
                </div>
                <div class="buy_paragraf">
                    <p style="font-size: 24px;">
                        Для того, чтобы забронировать съемку, заполните контактную форму и я
                        свяжусь с вами в ближайшее время.
                    </p>
                </div>
                <div class="buy_button_div">
                    <button class="buy_button_button" data-path="buy">Забронировать дату</button>
                </div>
            </div>

        </section>

        @if (ViewBag.Aunteficated != true)
        {
            <section class="modals">
                <div class="modal_overlay">
                    <div class="modal_window" data-target="buy">

                        <button class="btn_close">x</button>
                        <form asp-action="PageBuyNotAuntificate" asp-controller="Shop" method="post">
                            <div class="modal_window_inpute">
                                <h2 style="text-align: center;">Записаться на фотоссесию</h2>
                                <input style="display= none;" name="ProductId" type="text" placeholder="Ваше имя" value="@Model.Id"></input>
                                <input style="display= none;" name="ProductName" type="text" placeholder="Ваше имя" value="@Model.Name"></input>
                                <input style="display= none;" name="UserId" type="text" placeholder="Ваше имя" value="0"></input>
                                <input name="FirstNameUser" type="text" placeholder="Ваше имя"></input>
                                <input name="SecondNameUser"  type="text" placeholder="Ваша фамилия"></input>
                                <input name="UserEmail" type="text" placeholder="Ваш Емайл"></input>
                                <input name="UserNumberPhone" type="text" placeholder="Ваш номер телефона" id="phone"></input>
                                <label style="font-size: 36px"><input name="UserDate" type="date" id="date"></input><br> Желаймая дата</label>
                                <textarea name="DescriptionUser" class="textarea_modal" type="text" placeholder="Ваши пожелания"></textarea>
                                <div class="form_button_div">
                                    <button class="form_button_button">Отправить</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </section>

        }
        else
        {
            <section class="modals">
                <div class="modal_overlay">
                    <div style="height: 500px; margin: 300px 0 300px 0;" class="modal_window" data-target="buy">

                        <button class="btn_close">x</button>
                        <form asp-action="PageBuyNotAuntificate" asp-controller="Shop" method="post">
                            <div class="modal_window_inpute">
                                <h2 style="text-align: center;">Записаться на фотоссесию</h2>
                                <input style="display: none;" name="ProductId" type="text" placeholder="Ваше имя" value="@Model.Id"></input>
                                <input style="display: none;" name="UserId" type="text" placeholder="Ваше имя" value="@ViewBag.user.Id"></input>
                                <input style="display: none;" name="FirstNameUser" type="text" placeholder="Ваше имя" value="@ViewBag.user.UserName"></input>
                                <input style="display: none;" name="SecondNameUser" type="text" placeholder="Ваша фамилия" value="@ViewBag.user.SecondName"></input>
                                <input style="display: none;" name="UserEmail" type="text" placeholder="Ваш Емайл" value="@ViewBag.user.Email"></input>
                                <input style="display: none;" name="ProductName" type="text" placeholder="Ваш Емайл" value="@Model.Name"></input>
                                <input style="display: none;" name="UserNumberPhone" type="text" placeholder="Ваш номер телефона" id="phone" value="@ViewBag.user.NumberPhone"></input>
                                <label style="font-size: 36px"><input name="UserDate" type="date" id="date"></input><br> Желаймая дата</label>
                                <textarea name="DescriptionUser" class="textarea_modal" type="text" placeholder="Ваши пожелания"></textarea>
                                <div class="form_button_div">
                                    <button class="form_button_button">Отправить</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </section>
            
        }

    </div>
    
    
