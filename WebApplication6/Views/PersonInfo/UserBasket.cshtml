@{
}

<header>
    <link rel="stylesheet" href="~/css/site.css">    
    <link rel="stylesheet" href="~/css/OrdersUser.css">
</header>
<body>
    <div class="container">
        <section class="window_main">
            <div class="table">
                <table>
                    <thead>
                        <tr>
                            <th>Номер Заказа</th>
                            <th>Фамилия и имя клиента</th>
                            <th>Фамилия и имя фотографа</th>
                            <th>Пожелания клиента</th>
                            <th>Номер телефона клиента</th>
                            <th>Дата</th>
                            <th>Проверенно ли админом</th>
                        </tr>
                    </thead>
                    @foreach(var item in Model)
                    {
                        <tbody>
                    <td class="tb_iacheka">@item.Id</td>
                        <td class="tb_iacheka">@item.FirstNameUser @item.SecondNameUser</td>
                    <td class="tb_iacheka">@item.ProductName</td>
                    <td class="tb_iacheka">
                        @item.DescriptionUser
                    </td>
                        <td class="tb_iacheka">@item.UserNumberPhone</td>
                        <td class="tb_iacheka">@item.UserDate</td>
                            @if(item.State == true)
                            {
                                <td class="tb_iacheka"><img src="~/Images/WebPages/PersonCab/free-icon-checked-152593.png" alt=""></td>
                            }
                            else
                            {
                            <td class="tb_iacheka"><img src="~/Images/WebPages/PersonCab/free-icon-unchecked-152592.png" alt=""></td>
                            }

                    </tbody>                    
                        
                    }
                    

                </table>
            </div>
        </section>
    </div>
   


</body>
